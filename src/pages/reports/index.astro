---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const reports = (await getCollection('reports')).sort(
	(a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

function formatDate(date: Date) {
	return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
}

function getYouTubeId(url: string): string | null {
	const match = url.match(/(?:youtu\.be\/|youtube\.com\/watch\?v=)([\w-]+)/);
	return match ? match[1] : null;
}
---

<BaseLayout title="Deep Dives â€” Beyond Paralysis">
	<main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
		<h1 class="text-3xl font-bold mb-8 flex items-center gap-3">
			<span class="inline-block w-1 h-8 rounded-full bg-clinical-accent"></span>
			Deep Dive Reports
		</h1>

		{reports.length === 0 && (
			<p class="text-slate-400">No reports yet. Drop <code>.md</code> files into <code>src/content/reports/</code> to publish.</p>
		)}

		<div class="flex flex-col gap-4">
			{reports.map(report => {
				const videoId = report.data.youtubeUrl ? getYouTubeId(report.data.youtubeUrl) : null;
				return (
					<div class="grid grid-cols-1 sm:grid-cols-[1fr_25%] gap-4 items-stretch">
						<!-- Report Card -->
						<a href={`/reports/${report.id}`} class="block card-glow rounded-xl p-6 hover:border-clinical-accent/30 transition-all no-underline group">
							<div class="flex items-center gap-3 mb-2">
								<span class="text-xs text-slate-500">{formatDate(report.data.pubDate)}</span>
								<span class="text-[11px] font-semibold px-2.5 py-0.5 rounded-full border bg-clinical-accent/10 text-clinical-accent border-clinical-accent/20">Deep Dive</span>
								{report.data.pdfUrl && (
									<span class="text-[11px] font-semibold px-2.5 py-0.5 rounded-full border bg-emerald-500/10 text-emerald-400 border-emerald-500/20">PDF Available</span>
								)}
								{videoId && (
									<span class="text-[11px] font-semibold px-2.5 py-0.5 rounded-full border bg-red-500/10 text-red-400 border-red-500/20">Video</span>
								)}
							</div>
							<h2 class="text-xl font-semibold group-hover:text-clinical-accent transition-colors">{report.data.title}</h2>
							<p class="text-slate-400 text-sm mt-2 leading-relaxed line-clamp-3">{report.data.executiveSummary}</p>
						</a>

						<!-- Video Column -->
						<div class={`flex items-center justify-center ${!videoId ? 'hidden sm:flex' : ''}`}>
							{videoId ? (
								<a href={report.data.youtubeUrl} target="_blank" rel="noopener noreferrer" class="video-thumb block rounded-xl overflow-hidden border border-slate-700/50 hover:border-clinical-accent/40 transition-all w-full aspect-video relative group/vid">
									<img
										src={`https://img.youtube.com/vi/${videoId}/mqdefault.jpg`}
										alt={`Video: ${report.data.title}`}
										class="w-full h-full object-cover"
										loading="lazy"
									/>
									<!-- Play button overlay -->
									<div class="absolute inset-0 flex items-center justify-center bg-black/30 group-hover/vid:bg-black/10 transition-colors">
										<div class="w-12 h-12 rounded-full bg-red-600 flex items-center justify-center shadow-lg group-hover/vid:scale-110 transition-transform">
											<svg class="w-5 h-5 text-white ml-0.5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M8 5v14l11-7z"/>
											</svg>
										</div>
									</div>
								</a>
							) : (
								<div class="w-full aspect-video rounded-xl border border-slate-700/20 bg-slate-800/30 flex items-center justify-center">
									<span class="text-slate-600 text-xs">No video</span>
								</div>
							)}
						</div>
					</div>
				);
			})}
		</div>
	</main>
</BaseLayout>
