---
const {
  title = "Beyond Paralysis",
  description = "SCI research news, explained with realistic hope and real data.",
} = Astro.props;
const currentPath = Astro.url.pathname;

const nav = [
  { href: "/", label: "Home" },
  { href: "/research", label: "Research Log" },
  { href: "/reports", label: "Reports" },
  { href: "/about", label: "About" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <header class="header">
      <div class="wrap header-inner">
        <a class="brand" href="/">
          <span class="brand-title">Beyond Paralysis</span>
          <span class="brand-sub">SCI Research News</span>
        </a>

        <nav class="nav" aria-label="Primary navigation">
          {nav.map((item) => (
            <a
              class={"nav-link" + (currentPath === item.href ? " active" : "")}
              href={item.href}
            >
              {item.label}
            </a>
          ))}
        </nav>
      </div>
    </header>

    <main class="wrap main">
      <slot />
    </main>

    <footer class="footer">
      <div class="wrap footer-inner">
        <p>Â© {new Date().getFullYear()} Beyond Paralysis</p>
        <p class="small">
          Hopeful, but data-led. Not medical advice.
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    line-height: 1.5;
  }
  .wrap {
    max-width: 980px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .header {
    position: sticky;
    top: 0;
    background: white;
    border-bottom: 1px solid #e9e9e9;
  }
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 14px 0;
  }
  .brand {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .brand-title {
    font-weight: 750;
    letter-spacing: 0.2px;
  }
  .brand-sub {
    font-size: 12px;
    opacity: 0.75;
  }
  .nav {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }
  .nav-link {
    text-decoration: none;
    color: inherit;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid transparent;
  }
  .nav-link:hover {
    border-color: #ddd;
  }
  .nav-link.active {
    border-color: #111;
  }
  .main {
    padding: 28px 0 40px;
  }
  .footer {
    border-top: 1px solid #e9e9e9;
    padding: 18px 0;
    margin-top: 40px;
  }
  .footer-inner {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
  }
  .small {
    font-size: 12px;
    opacity: 0.75;
    margin: 0;
  }
</style>
