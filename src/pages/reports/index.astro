---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const reports = (await getCollection('reports')).sort(
	(a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

function formatDate(date: Date) {
	return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
}
---

<BaseLayout title="Deep Dives â€” Beyond Paralysis">
	<main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
		<h1 class="text-3xl font-bold mb-8">Deep Dive Reports</h1>

		{reports.length === 0 && (
			<p class="text-slate-400">No reports yet. Drop <code>.md</code> files into <code>src/content/reports/</code> to publish.</p>
		)}

		<div class="flex flex-col gap-4">
			{reports.map(report => (
				<a href={`/reports/${report.id}`} class="block bg-clinical-card rounded-xl p-6 border border-slate-700/50 hover:border-clinical-accent/40 transition no-underline group">
					<span class="text-xs text-slate-500">{formatDate(report.data.pubDate)}</span>
					<h2 class="text-xl font-semibold mt-1 group-hover:text-clinical-accent transition-colors">{report.data.title}</h2>
					<p class="text-slate-400 text-sm mt-2 leading-relaxed">{report.data.executiveSummary}</p>
				</a>
			))}
		</div>
	</main>
</BaseLayout>
