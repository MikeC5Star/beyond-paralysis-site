---
import SiteLayout from "../layouts/SiteLayout.astro";

/**
 * Quick-edit content block (you can change these anytime).
 * Later we can auto-pull latest report from /reports/*.md frontmatter.
 */
const latestResearch = {
  title: "NervGen Pharma: NVG-291",
  blurb:
    "A peptide drug aiming to lift scar-related ‘brakes’ on regeneration and plasticity after SCI. Here’s what the trial data actually suggests so far.",
  href: "/reports/nervgen",
  image: "/reports/nervgen-card.jpg", // put this image in /public/reports/
};

const latestNews = [
  { title: "Story 1: (replace with your headline)", url: "https://example.com" },
  { title: "Story 2: (replace with your headline)", url: "https://example.com" },
  { title: "Story 3: (replace with your headline)", url: "https://example.com" },
];

const latestVideos = [
  // Use YouTube video IDs (the part after v=)
  { title: "Short: NVG-291 explained", id: "VIDEO_ID_1" },
  { title: "Short: Cell therapies 2025", id: "VIDEO_ID_2" },
  { title: "Short: Stimulation update", id: "VIDEO_ID_3" },
  { title: "Short: Scaffold tech", id: "VIDEO_ID_4" },
];
---

<SiteLayout title="Beyond Paralysis | SCI Research News">
  <!-- HERO -->
  <section class="hero">
    <div class="hero-inner">
      <div class="logo-ring">
        <img src="/logo.png" alt="Beyond Paralysis logo" />
      </div>

      <div class="hero-title">
        <h1>BEYOND PARALYSIS</h1>
        <p>SCI research news and deep dives. Hopeful, but data-led.</p>

        <nav class="topnav" aria-label="Site navigation">
          <a href="/research">Research</a>
          <a href="/about">Bio</a>
          <a href="/news">News</a>
          <a href="/reviews">Reviews</a>
        </nav>
      </div>
    </div>
  </section>

  <!-- CONTENT -->
  <section class="grid">
    <!-- Latest Research -->
    <div class="panel">
      <h2>Latest Research</h2>

      <a class="research-card" href={latestResearch.href}>
        <div class="imgbox" aria-hidden="true">
          <img src={latestResearch.image} alt="" />
        </div>
        <div class="content">
          <h3>{latestResearch.title}</h3>
          <p>{latestResearch.blurb}</p>
          <span class="cta">Read the report →</span>
        </div>
      </a>
    </div>

    <!-- Latest News -->
    <div class="panel">
      <h2>Latest News</h2>

      <ul class="news">
        {latestNews.map((n) => (
          <li>
            <a href={n.url} target="_blank" rel="noreferrer">
              {n.title}
            </a>
          </li>
        ))}
      </ul>

      <p class="hint">
        These link to external abstracts/articles. (Later we can store summaries on-site too.)
      </p>
    </div>
  </section>

  <!-- Latest Videos -->
  <section class="panel">
    <h2>Latest Videos</h2>

    <div class="videos">
      {latestVideos.map((v) => (
        <button class="vid" type="button" data-youtube-id={v.id} data-title={v.title}>
          <img
            src={`https://img.youtube.com/vi/${v.id}/hqdefault.jpg`}
            alt={`Play: ${v.title}`}
            loading="lazy"
          />
          <span class="play" aria-hidden="true">▶</span>
        </button>
      ))}
    </div>

    <!-- Modal -->
    <dialog id="videoModal" class="modal">
      <div class="modal-inner">
        <div class="modal-head">
          <strong id="modalTitle">Video</strong>
          <button type="button" class="close" aria-label="Close">✕</button>
        </div>

        <div class="frame">
          <iframe
            id="player"
            width="100%"
            height="420"
            src=""
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen>
          </iframe>
        </div>

        <div class="modal-actions">
          <a id="openYT" class="btn ghost" href="#" target="_blank" rel="noreferrer">Open in YouTube</a>
        </div>
      </div>
    </dialog>
  </section>

  <script>
    const modal = document.getElementById("videoModal");
    const player = document.getElementById("player");
    const title = document.getElementById("modalTitle");
    const openYT = document.getElementById("openYT");
    const closeBtn = modal.querySelector(".close");

    function openVideo(id, text) {
      title.textContent = text || "Video";
      const url = "https://www.youtube.com/embed/" + id + "?autoplay=1&rel=0";
      player.src = url;
      openYT.href = "https://www.youtube.com/watch?v=" + id;
      modal.showModal();
    }

    function closeVideo() {
      modal.close();
      player.src = ""; // stops playback
    }

    document.querySelectorAll("button.vid").forEach((btn) => {
      btn.addEventListener("click", () => {
        openVideo(btn.dataset.youtubeId, btn.dataset.title);
      });
    });

    closeBtn.addEventListener("click", closeVideo);
    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeVideo();
    });
    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal.open) closeVideo();
    });
  </script>

  <style>
    /* HERO */
    .hero {
      border: 1px solid #e9e9e9;
      border-radius: 18px;
      overflow: hidden;
      background: url("/hero-bg.jpg") center/cover no-repeat;
      min-height: 180px;
      margin-bottom: 18px;
    }
    .hero-inner {
      display: grid;
      grid-template-columns: 120px 1fr;
      gap: 16px;
      padding: 18px;
      background: linear-gradient(to bottom, rgba(255,255,255,0.92), rgba(255,255,255,0.78));
      align-items: center;
    }
    .logo-ring {
      width: 108px;
      height: 108px;
      border-radius: 999px;
      border: 3px solid #111;
      background: white;
      display: grid;
      place-items: center;
      overflow: hidden;
    }
    .logo-ring img { width: 100%; height: 100%; object-fit: cover; }
    .hero-title h1 {
      margin: 0;
      letter-spacing: 0.6px;
      font-weight: 900;
    }
    .hero-title p { margin: 6px 0 10px; max-width: 70ch; opacity: 0.85; }

    .topnav {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .topnav a {
      text-decoration: none;
      color: inherit;
      padding: 6px 10px;
      border: 1px solid #ddd;
      border-radius: 999px;
      background: rgba(255,255,255,0.75);
    }
    .topnav a:hover { border-color: #111; }

    /* PANELS */
    .grid {
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: 14px;
      align-items: start;
      margin-bottom: 14px;
    }
    .panel {
      border: 1px solid #e9e9e9;
      border-radius: 18px;
      padding: 14px;
    }
    .panel h2 { margin: 0 0 10px; }

    /* Latest Research card */
    .research-card {
      display: grid;
      grid-template-columns: 140px 1fr;
      gap: 12px;
      text-decoration: none;
      color: inherit;
      border: 1px solid #eee;
      border-radius: 14px;
      overflow: hidden;
    }
    .research-card:hover { border-color: #111; }
    .imgbox { background: #f3f3f3; }
    .imgbox img { width: 100%; height: 100%; object-fit: cover; display: block; }
    .content { padding: 10px 12px; }
    .content h3 { margin: 0 0 6px; }
    .content p { margin: 0 0 10px; opacity: 0.85; }
    .cta { font-weight: 650; }

    /* News */
    .news { margin: 0; padding-left: 18px; display: grid; gap: 8px; }
    .news a { color: inherit; }
    .hint { font-size: 12px; opacity: 0.7; margin: 10px 0 0; }

    /* Videos strip */
    .videos {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 10px;
    }
    .vid {
      position: relative;
      border: 1px solid #eee;
      border-radius: 14px;
      overflow: hidden;
      padding: 0;
      cursor: pointer;
      background: white;
    }
    .vid:hover { border-color: #111; }
    .vid img { width: 100%; height: 100%; display: block; object-fit: cover; }
    .play {
      position: absolute;
      inset: auto 10px 10px auto;
      background: rgba(0,0,0,0.78);
      color: white;
      border-radius: 999px;
      padding: 6px 10px;
      font-size: 14px;
    }

    /* Modal */
    .modal { border: none; padding: 0; border-radius: 16px; width: min(860px, 92vw); }
    .modal::backdrop { background: rgba(0,0,0,0.55); }
    .modal-inner { padding: 12px; }
    .modal-head {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
      padding: 6px 6px 10px;
    }
    .close {
      border: 1px solid #ddd;
      background: white;
      border-radius: 10px;
      padding: 6px 10px;
      cursor: pointer;
    }
    .close:hover { border-color: #111; }
    .frame {
      border: 1px solid #e9e9e9;
      border-radius: 14px;
      overflow: hidden;
    }
    .modal-actions { display: flex; justify-content: flex-end; padding: 10px 6px 6px; }
    .btn.ghost {
      text-decoration: none;
      border: 1px solid #ddd;
      padding: 8px 10px;
      border-radius: 12px;
      color: #111;
    }
    .btn.ghost:hover { border-color: #111; }

    /* Responsive */
    @media (max-width: 820px) {
      .grid { grid-template-columns: 1fr; }
      .hero-inner { grid-template-columns: 92px 1fr; }
    }
  </style>
</SiteLayout>
