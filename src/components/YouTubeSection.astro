---
import { YouTube } from 'astro-embed';
import { latestVideos } from '../config/youtube';

const videoIds = latestVideos.slice(0, 4);
const channelUrl = 'https://www.youtube.com/channel/UCSYoI-Zk0UTpZcRPrvW4WHQ';
---

<!-- ===== MOBILE VERSION (below sm) ===== -->
<section class="sm:hidden w-[90%] mx-auto">
	<h2 class="text-lg font-bold mb-4 flex items-center gap-2">
		<svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 24 24">
			<path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z" />
			<path fill="#fff" d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
		</svg>
		Mike's Channel & Latest Videos
	</h2>

	<!-- Channel banner -->
	<a href={channelUrl} target="_blank" rel="noopener noreferrer" class="block mb-4 no-underline">
		<img
			src="/channel-banner.jpg"
			alt="Beyond Paralysis YouTube Channel"
			class="w-full rounded-xl channel-banner-glow"
		/>
	</a>

	<!-- 2x2 video grid -->
	<div class="grid grid-cols-2 gap-3">
		{videoIds.map(id => (
			<div class="rounded-lg overflow-hidden card-glow">
				<YouTube id={id} />
			</div>
		))}
	</div>
</section>

<!-- ===== DESKTOP VERSION (sm and up) â€” unchanged ===== -->
<section class="hidden sm:block">
	<h2 class="text-lg font-bold mb-4 flex items-center gap-2">
		<svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 24 24">
			<path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z" />
			<path fill="#fff" d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
		</svg>
		Latest Videos
	</h2>
	<div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
		{videoIds.map(id => (
			<div class="rounded-xl overflow-hidden card-glow">
				<YouTube id={id} />
			</div>
		))}
	</div>
</section>

<style>
	.channel-banner-glow {
		box-shadow:
			0 0 15px rgba(0, 229, 255, 0.15),
			0 0 40px rgba(0, 229, 255, 0.08);
		border: 1px solid rgba(0, 229, 255, 0.15);
	}
</style>
